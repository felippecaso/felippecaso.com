        link(href='css/styles.css', rel='stylesheet')

    body#page-top

        // Navigation
        nav#sideNav.navbar.navbar-expand-lg.navbar-dark.bg-primary.fixed-top
            a.navbar-brand.js-scroll-trigger(href='#page-top')
                span.d-block.d-lg-none Felippe Felisola Caso
                span.d-none.d-lg-block
                    img.img-fluid.img-profile.rounded-circle.mx-auto.mb-2(src='assets/img/profile.jpg', alt='')
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='#about') About

        // Page Content
        .container-fluid.p-0

            // About
            section#about.resume-section
                .resume-section-content
                    h1.mb-0
                        | Felippe 
                        span.text-primary Felisola Caso
                    .subheading.mb-5
                        | São Paulo, Brazil · 
                        a(href='mailto:felippe.felisola@gmail.com') felippe.felisola@gmail.com
                    p.lead.mb-5
                        | I'm a facilitator, musician and data analyst with special interest in technology, programming, productivity and self-knowledge.
                    .social-icons
                        a.social-icon(href='https://www.linkedin.com/in/felippecaso/')
                            i.fab.fa-linkedin-in
                        a.social-icon(href='https://www.instagram.com/felippecaso/')
                            i.fab.fa-instagram

            hr.m-0

